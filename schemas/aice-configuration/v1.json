{
  "$schema": "http://json-schema.org/draft-07/schema#",

  "definitions": {
    "resolver": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "parameters": {
          "type": "object"
        }
      },
      "required": ["name"],
      "additionalProperties": false
    }
  },

  "$id": "aice.configuration",
  "type": "object",
  "properties": {
    "threshold": { "type": "number", "minimum": 0, "maximum": 1 },
    "resolvers": {
      "type": "array",
      "items": { "$ref": "aice.configuration#/definitions/resolver"},
      "minItems": 1,
      "uniqueItems": true
    }
  },
  "additionalProperties": false
}