{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "resolver": {
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^([a-z]|[A-Z]|-|[0-9])+"
        },
        "type": {
          "type": "string",
          "default": "resolver",
          "enum": [
            "resolver"
          ]
        }
      },
      "required": [
        "name"
      ],
      "additionalProperties": false
    },
    "simple-resolver": {
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^([a-z]|[A-Z]|-|[0-9])+"
        },
        "type": {
          "type": "string",
          "enum": [
            "simple-resolver"
          ]
        }
      },
      "required": [
        "name",
        "type"
      ],
      "additionalProperties": false
    },
    "remote-resolver": {
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^([a-z]|[A-Z]|-|[0-9])+"
        },
        "type": {
          "type": "string",
          "enum": [
            "remote-resolver"
          ]
        },
        "url": {
          "type": "string",
          "pattern": "^(https?):\/\/(-\\.)?([^\\s/?\\.#-]+\\.?)+(\/[^\\s]*)?$"
        }
      },
      "required": [
        "name",
        "type",
        "url"
      ],
      "additionalProperties": false
    }
  },
  "$id": "aice.configuration",
  "type": "object",
  "properties": {
    "configuration": {
      "type": "object",
      "properties": {
        "version": { "type": "string", "const": "1" },
        "threshold": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "debug": { "type": "boolean" },
        "rules": { "type": "object" },
        "services": { "type": "object" },
        "resolvers": {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "$ref": "#/definitions/remote-resolver"
              },
              {
                "$ref": "#/definitions/simple-resolver"
              },
              {
                "$ref": "#/definitions/resolver"
              }
            ]
          },
          "minItems": 1,
          "uniqueItems": true
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["configuration"],
  "additionalProperties": false
}